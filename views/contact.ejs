<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title><%= title %></title>
</head>
<body class="bg-gray-50">
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-12">
    <div class="max-w-5xl mx-auto">
      <h1 class="text-3xl font-bold mb-8 text-center">Contact Us</h1>
      
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold mb-4">Send Us a Message</h2>
          
          <% if (locals.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
              <%= success %>
            </div>
          <% } %>
          
          <% if (locals.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
              <%= error %>
            </div>
          <% } %>
          
          <% if (locals.errors && errors.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
              <ul class="list-disc pl-4">
                <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                <% }) %>
              </ul>
            </div>
          <% } %>
          
          <form action="/contact" method="POST" class="space-y-4">
            <div>
              <label for="name" class="block text-gray-700 font-medium mb-2">Your Name</label>
              <input type="text" id="name" name="name" value="<%= locals.formData ? formData.name : '' %>" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
            </div>
            
            <div>
              <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
              <input type="email" id="email" name="email" value="<%= locals.formData ? formData.email : '' %>" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
            </div>
            
            <div>
              <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
              <input type="text" id="subject" name="subject" value="<%= locals.formData ? formData.subject : '' %>" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
            </div>
            
            <div>
              <label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
              <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"><%= locals.formData ? formData.message : '' %></textarea>
            </div>
            
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-md transition duration-300">Send Message</button>
          </form>
        </div>
        
        <!-- Contact Information -->
        <div>
          <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Contact Information</h2>
            
            <ul class="space-y-4">
              <li class="flex items-start">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4 mt-1">
                  <i class="fas fa-map-marker-alt text-green-600"></i>
                </div>
                <div>
                  <h3 class="font-medium">Address</h3>
                  <p class="text-gray-600">Eldoret, Kenya</p>
                </div>
              </li>
              
              <li class="flex items-start">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4 mt-1">
                  <i class="fas fa-phone-alt text-green-600"></i>
                </div>
                <div>
                  <h3 class="font-medium">Phone</h3>
                  <p class="text-gray-600">+254 792167412</p>
                </div>
              </li>
              
              <li class="flex items-start">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4 mt-1">
                  <i class="fas fa-envelope text-green-600"></i>
                </div>
                <div>
                  <h3 class="font-medium">Email</h3>
                  <p class="text-gray-600">info@jiajirihub.com</p>
                </div>
              </li>
              
              <li class="flex items-start">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4 mt-1">
                  <i class="fas fa-clock text-green-600"></i>
                </div>
                <div>
                  <h3 class="font-medium">Business Hours</h3>
                  <p class="text-gray-600">Monday - Friday: 9am - 5pm</p>
                  <p class="text-gray-600">Saturday: 10am - 2pm</p>
                </div>
              </li>
            </ul>
          </div>
          
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Connect With Us</h2>
            
            <div class="flex space-x-4">
              <a href="#" class="w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center hover:bg-blue-700 transition duration-300">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="w-10 h-10 bg-blue-400 text-white rounded-full flex items-center justify-center hover:bg-blue-500 transition duration-300">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="w-10 h-10 bg-pink-600 text-white rounded-full flex items-center justify-center hover:bg-pink-700 transition duration-300">
                <i class="fab fa-instagram"></i>
              </a>
              <a href="#" class="w-10 h-10 bg-blue-800 text-white rounded-full flex items-center justify-center hover:bg-blue-900 transition duration-300">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Map -->
      <div class="bg-white rounded-lg shadow-md p-6 mt-8">
        <h2 class="text-xl font-semibold mb-4">Our Location</h2>
        <div class="h-96 bg-gray-200 rounded-lg">
          <!-- Placeholder for map -->
          <div class="w-full h-full flex items-center justify-center">
            <p class="text-gray-500">Map will be displayed here</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>